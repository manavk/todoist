/**
 *Implementation of hook_permission()
 */
function todoist_com_permission() {
  $permission = array();
  $permission['todoist access'] = array(
    'title' => t('Todoist access'),
    'description' => t('Perform administration tasks for Todoist.'),
  );

  return $permission;
}

/**
 * Implements hook_help.
 */
function todoist_com_help($path, $arg) {
  if ($path == 'admin/help#todoist_com') {
    $output = '';
    $output .= '<h3>' . t('About') . '</h3>';
    return $output;
  }
}

