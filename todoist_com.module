/**
 * Implements hook_menu_local_tasks_alter().
 */
function todoist_com_menu_local_tasks_alter(&$data, $router_item, $root_path) {

  $user_apicall = 'https://api.todoist.com/API/ping?token=' . variable_get('user_token');
  $http_result = drupal_http_request($user_apicall);
  if ($http_result->status_message == 'OK') {
    // Add action link to 'admin/todoist/add' on 'admin/content/todoist' page.
    if ($root_path == 'admin/content/todoist') {
      $item = menu_get_item('admin/todoist/add');
      if ($item['access']) {
        $data['actions']['output'][] = array(
          '#theme' => 'menu_local_action',
          '#link' => $item,
        );
      }
    }
  }
}

